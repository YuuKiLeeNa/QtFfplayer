{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build", // 这个标签必须与 launch.json 中的 preLaunchTask 一致
            "command": "cd ${workspaceFolder}/build && make -j$(nproc)",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}